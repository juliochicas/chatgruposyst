# ==================================================================================
# ChatGrupoSyst Docker deployment defaults
# Copy this file to infrastructure/docker/.env and adjust the values to your environment.
# ==================================================================================

# Ports exposed on the host
BACKEND_PORT=8080
FRONTEND_PORT=3000
DB_PORT=5432
REDIS_PORT=6379

# Database configuration
DB_HOST=postgres
DB_USER=chatgruposyst
DB_PASS=chatgruposyst
DB_NAME=chatgruposyst
DB_DIALECT=postgres

# Redis configuration
REDIS_HOST=redis
REDIS_PASSWORD=redispass
REDIS_URI=redis://:redispass@redis:6379
REDIS_OPT_LIMITER_MAX=1
REDIS_OPT_LIMITER_DURATION=3000

# Backend configuration
NODE_ENV=production
BACKEND_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
PORT=8080
PROXY_PORT=443
JWT_SECRET=change-me
JWT_REFRESH_SECRET=change-me-too
USER_LIMIT=5
CONNECTIONS_LIMIT=5

# Meta integrations
META_VERIFY_TOKEN=change-me
META_APP_SECRET=change-me
META_API_VERSION=v17.0

# UltraMsg integration (optional)
ULTRAMSG_INSTANCE_ID=
ULTRAMSG_TOKEN=
META_APP_ID=change-me
META_REDIRECT_URI=https://your-backend-domain/channels/meta/oauth/callback
META_STATE_SECRET=change-me
META_POST_CONNECT_REDIRECT=http://localhost:3000/channels

# Frontend build configuration
REACT_APP_BACKEND_URL=http://localhost:8080

